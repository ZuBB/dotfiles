# vim: set noexpandtab : ~

[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	#plain = normal dim
	#whitespace = red reverse
[color "status"]
	header = normal dim
	added = yellow
	changed = green
	untracked = cyan

