# vim: set filetype=gitconfig : ~
# vim: set shiftwidth=4 : ~
# vim: set softtabstop=0 : ~
# vim: set noexpandtab : ~

[core]
	editor = vim

	# we cant use '$XGD_CONFIG_HOME' instead of '~/.config/'
	# because of http://stackoverflow.com/a/11262153
	# its turned out that 
	# > Its default value is $XDG_CONFIG_HOME/git/ignore
	# (https://goo.gl/bKr4Yr) so this is commented :)
	#excludesfile = ~/.config/git/ignore

	# http://goo.gl/Vug01E
	#eol = lf
	autocrlf = input
	safecrlf = true
	whitespace = space-before-tab,-blank-at-eof
	filemode = false

[apply]
	whitespace = fix

[push]
	default = current
	followTags = true

[diff]
	tool = vimdiff
	renameLimit = 0

[difftool]
	prompt = false

[log]
	date = local

[merge]
	renameLimit = 0

[include]
	path = alias
	path = colors

	path = user

