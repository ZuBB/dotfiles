# vim: set filetype=gitconfig : ~
# vim: set shiftwidth=4 : ~
# vim: set softtabstop=0 : ~
# vim: set noexpandtab : ~

[core]
	editor = vim
	# we cant use '$XGD_CONFIG_HOME' instead of '~/.config/'
	# because of http://stackoverflow.com/a/11262153
	excludesfile = ~/.config/git/ignore

	# http://goo.gl/Vug01E
	#eol = lf
	autocrlf = input
	safecrlf = true
	whitespace = space-before-tab,-blank-at-eof
	filemode = false

[apply]
	whitespace = fix

[push]
	default = simple

[diff]
	tool = vimdiff

[difftool]
	prompt = false

[log]
	date = local

[include]
	path = user

	path = aliases
	path = colors
