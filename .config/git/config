# vim: set filetype=gitconfig : ~

[core]
    editor = vim
    # we cant use '$XGD_CONFIG_HOME' instead of '~/.config/'
    # because of http://stackoverflow.com/a/11262153
    excludesfile = ~/.config/git/ignore

    # http://goo.gl/Vug01E
    #eol = lf
    autocrlf = input
    safecrlf = true
    whitespace = trailing-space,space-before-tab
    filemode = false

[apply]
    whitespace = fix

[push]
    default = simple

[diff]
    tool = vimdiff

[difftool]
    prompt = false

[log]
	date = local

[include]
    path = username
    path = aliases
    path = colors
