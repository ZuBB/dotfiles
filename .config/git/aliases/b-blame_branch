# vim: set filetype=gitconfig : ~
# vim: set shiftwidth=4 : ~
# vim: set softtabstop=0 : ~
# vim: set noexpandtab : ~

[alias]
	# ========== [ BLAME ] ==========
	# http://goo.gl/4yyu5v
	bl = blame HEAD

	# ========== [ BRANCH ] ==========
	br = branch
	ba = branch -a
	# show amount of commits in branch
	bc = rev-list --count HEAD ^master
	bd = branch -D
	bm = branch -m
	# show name of the active branch
	bn = rev-parse --abbrev-ref HEAD
	bt = branch -r
