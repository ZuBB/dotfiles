# vim: set filetype=gitconfig : ~
# vim: set shiftwidth=4 : ~
# vim: set softtabstop=0 : ~
# vim: set noexpandtab : ~

[alias]
	# ========== [ BLAME ] ==========
	# http://goo.gl/4yyu5v
	bl = blame HEAD

	# ========== [ BRANCH ] ==========
	br = branch
	ba = branch -a
	bc = rev-list --count HEAD ^master
	bd = "!f() { git branch -D $1; }; f"
	bm = branch -m
	bn = rev-parse --abbrev-ref HEAD
	bt = branch -r
