# vim: set filetype=conf : ~

# Control the auto-update functionality of Ghostty
auto-update = check
 
# This configuration lets you change the behavior so that option is treated
# as alt
macos-option-as-alt = true

# Customize the macOS app icon.
macos-icon = custom

# The absolute path to the custom icon file (PNG, JPEG, ICNS)
macos-custom-icon = ~/.local/share/custom-app-icons/Ghostty.png

